/* components/index/colForm.wxss */
.out{
  display: flex;
  flex-direction: column;
  margin:20rpx 40rpx;
  color:#333333;
  border-bottom: 1rpx solid #eee;
}
.lineHeight{
  height: 50rpx;
  line-height: 50rpx
}
.lineHeight2{
  height: 70rpx;
  line-height: 70rpx
}
.title{
  font-size: 3.4vw;
  text-align: left;
}
.input {
  width: 100%;
  border:0;
  padding-left:0rpx;
  text-align: left;
  font-size: 3.4vw;
  font-family: "微软雅黑";
  color: #666;
}
.iptplaceholder{
  color: #ccc;
  font-family: "微软雅黑";
}

.imgDown {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 20rpx;
  top: 25rpx;
}

.relative{
  position: relative;
}

.vid {
  margin: 25rpx 0 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;

}

.vid .jbjb>view {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.vid .jbjb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5px;
  /* margin-right: 20rpx; */
  float: left;
  margin-bottom: 20rpx;
}

.vid .addimg, .vid .void {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5px;
  /* margin-right: 20rpx; */
  margin-bottom: 20rpx;
  float: left;
  position: relative;
}

.vid .addimg .close, .vid .void .close {
  width: 27rpx;
  height: 27rpx;
  position: absolute;
  right: 0;
  top: 0;
}

